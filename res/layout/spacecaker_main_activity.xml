<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_holo_dark" >

    <include
        android:id="@+id/include1"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        layout="@layout/title" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/theme_2"
        android:onClick="but3"
        android:text="@string/Theme_2"
        android:textColor="#ff000000" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/theme_3"
        android:onClick="but4"
        android:text="@string/Theme_3"
        android:textColor="#ff000000" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/button3"
        android:layout_below="@+id/include1"
        android:background="@drawable/stock_theme"
        android:onClick="but1"
        android:text="@string/Theme_stock"
        android:textColor="#ff000000" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignParentRight="true"
        android:background="@drawable/theme_1"
        android:onClick="but2"
        android:text="@string/Theme_1"
        android:textColor="#ff000000" />

</RelativeLayout>