<resources>

    <style name="SpaceTheme" parent="android:Theme.Black.NoTitleBar" />

    <style name="SpaceCakerText" parent="android:TextAppearance.WindowTitle">
        <item name="android:textSize">25dip</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="SpaceWindowTitleBackground">
        <item name="android:background">@drawable/ab_transparent_dark_holo</item>
    </style>

    <style name="SpaceWindowTitle">
        <item name="android:textAppearance">@style/SpaceCakerText</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#000000</item>
    </style>

    <style name="CustomSpaceBar" parent="android:Theme.Black.NoTitleBar">
        <item name="android:icon">@drawable/ic_menu_space</item>
    </style>
</resources>
